<div class="post">
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>{{blogpost.title}}</h2>
      <div>
        Posted by {{blogpost.user.username}} on {{formatDate blogpost.createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{blogpost.body}}
    </div>
  </article>

  {{#if blogpost.comments}}
  <section class="card">
    <div class="card-header">
      <h3>Comments</h3>
    </div>

    <div class="card-body">
      {{#each blogpost.comments as |comment|}}
      {{> comments comment=comment}}
      {{/each}}
    </div>
  </section>
  {{/if}}

  <form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="post-id" value="{{blogpost.id}}" />

      <label class="form-label" for="comment-body">Comment</label>
      <textarea name="comment-body" class="form-input"></textarea>

      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>
