<div class="post">
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>{{Blogpost.title}}</h2>
      <div>
        Posted by {{Blogpost.user.username}} on {{formatDate Blogpost.createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{Blogpost.body}}
    </div>
  </article>

  {{#if Blogpost.comments}}
  <section class="card">
    <div class="card-header">
      <h3>Comments</h3>
    </div>

    <div class="card-body">
      {{#each Blogpost.comments as |comment|}}
      {{> comments comment=comment}}
      {{/each}}
    </div>
  </section>
  {{/if}}

  <form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="post-id" value="{{Blogpost.id}}" />

      <label class="form-label" for="comment-body">Comment</label>
      <textarea name="comment-body" class="form-input"></textarea>

      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>
